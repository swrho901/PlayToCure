<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backimg"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/gameStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:background="@drawable/button_style"
        android:shadowColor="#3E82C6"
        android:textSize="20sp"
        android:textColor="#8350B6"
        android:text="find number"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/statistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="#8350B6"
        android:shadowColor="#3E82C6"
        android:background="@drawable/button_style"
        android:text="statstic"
        app:layout_constraintTop_toBottomOf="@+id/gameStart"
   />

    <Button
        android:id="@+id/startgameTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="#8350B6"
        android:shadowColor="#3E82C6"
        android:background="@drawable/button_style"
        android:text="remember number - easy"
        app:layout_constraintTop_toBottomOf="@+id/statistics"
        />
    <Button
        android:id="@+id/statisticTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="#8350B6"
        android:shadowColor="#3E82C6"
        android:background="@drawable/button_style"
        android:text="statistic"
        app:layout_constraintTop_toBottomOf="@+id/startgameTwo"
        />

    <Button
        android:id="@+id/startgameThree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="#8350B6"
        android:shadowColor="#3E82C6"
        android:background="@drawable/button_style"
        android:text="remember number - hard"
        app:layout_constraintTop_toBottomOf="@+id/statisticTwo"
        />

    <Button
        android:id="@+id/statisticThree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="#8350B6"
        android:shadowColor="#3E82C6"
        android:background="@drawable/button_style"
        android:text="statistic"
        app:layout_constraintTop_toBottomOf="@+id/startgameThree"
        />

</androidx.constraintlayout.widget.ConstraintLayout>